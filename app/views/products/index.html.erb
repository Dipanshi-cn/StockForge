<div class="flex flex-col lg:flex-row gap-12">
  <aside class="w-full lg:w-1/4">
    <div class="bg-white p-8 rounded-3xl shadow-xl shadow-gray-100 border border-gray-200 sticky top-28 overflow-hidden">
      <div class="absolute -top-12 -right-12 w-32 h-32 bg-blue-50 rounded-full flex items-center justify-center text-blue-100 group-hover:scale-110 transition duration-300 transform">
        <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24"><path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
      </div>
      
      <div class="relative z-10">
        <h2 class="text-xs font-black text-gray-600 uppercase tracking-widest mb-6">Live Search</h2>
        <%= form_with url: search_products_path, method: :get, class: "relative mb-10" do |f| %>
          <%= f.text_field :query, placeholder: "SKU or Name...", class: "w-full border-gray-300 rounded-2xl shadow-inner focus:border-blue-500 focus:ring-blue-500 text-sm py-4 px-6 font-bold text-gray-800 placeholder:text-gray-500 italic transition duration-300" %>
          <%= f.button type: :submit, class: "absolute right-4 top-1/2 -translate-y-1/2 text-blue-500 hover:text-blue-700 transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          <% end %>
        <% end %>

        <h2 class="text-xs font-black text-gray-600 uppercase tracking-widest mb-6">Catalog Filter</h2>
        <ul class="space-y-4 mb-10">
          <li>
            <%= link_to products_path, class: "flex items-center justify-between group p-3 rounded-xl transition #{params[:category_id].blank? ? 'bg-blue-600 text-white shadow-lg shadow-blue-100' : 'text-gray-800 hover:bg-gray-100'}" do %>
              <span class="text-sm font-bold uppercase tracking-widest">All Inventory</span>
              <span class="text-[10px] font-black opacity-50"><%= Product.count %></span>
            <% end %>
          </li>
          <% @categories.each do |category| %>
            <li>
              <%= link_to products_path(category_id: category.id), class: "flex items-center justify-between group p-3 rounded-xl transition #{params[:category_id].to_s == category.id.to_s ? 'bg-blue-600 text-white shadow-lg shadow-blue-100' : 'text-gray-800 hover:bg-gray-100'}" do %>
                <span class="text-sm font-bold uppercase tracking-widest"><%= category.name %></span>
                <span class="text-[10px] font-black opacity-50"><%= category.products.count %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </aside>

  <section class="w-full lg:w-3/4">
    <div class="flex items-center justify-between mb-12">
      <div>
        <h1 class="text-4xl font-black text-gray-900 tracking-tight leading-none mb-2">Wholesale Hardware</h1>
      </div>
      <div class="hidden sm:flex gap-4">
        <div class="bg-white px-4 py-2 rounded-xl shadow-sm border border-gray-100 flex items-center gap-2">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          <span class="text-[10px] font-black text-gray-600 uppercase tracking-widest">Live Updates</span>
        </div>
      </div>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-10">
      <% @products.each do |product| %>
        <div class="bg-white rounded-[2rem] shadow-xl shadow-gray-100 border border-gray-100 overflow-hidden flex flex-col group hover:shadow-2xl transition duration-500 transform hover:-translate-y-2">
          <div class="relative h-64 bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center overflow-hidden">
             <div class="absolute inset-0 bg-gradient-to-tr from-white to-transparent opacity-50 group-hover:scale-110 transition transform duration-700"></div>
             <i data-lucide="<%= category_icon_name(product.category.name) %>" class="w-24 h-24 text-gray-400 relative z-10 group-hover:text-blue-500 transition duration-500 transform group-hover:rotate-12"></i>
             <div class="absolute top-6 right-6">
                <span class="inline-flex items-center px-4 py-2 rounded-full text-[10px] font-black uppercase tracking-widest shadow-md border-2 border-white
                  <%= product.stock_quantity > 0 ? 'bg-green-600 text-white' : 'bg-red-600 text-white' %>">
                  <%= product.stock_quantity > 0 ? 'Available' : 'Out of Stock' %>
                </span>
             </div>
          </div>
          <div class="p-8 flex-grow">
            <p class="text-[10px] font-black text-blue-600 uppercase tracking-widest mb-3"><%= product.category.name %></p>
            <h3 class="text-xl font-black text-gray-900 mb-4 tracking-tight group-hover:text-blue-600 transition">
              <%= link_to product.name, product_path(product) %>
            </h3>
            <div class="flex items-center justify-between pt-6 border-t border-gray-50">
              <div class="flex flex-col">
                <span class="text-xs font-black text-gray-600 uppercase tracking-widest">Price</span>
                <span class="text-2xl font-black text-gray-900 tracking-tighter italic">$<%= number_with_precision(product.selling_price, precision: 2) %></span>
              </div>
              <div class="flex flex-col items-end">
                <span class="text-xs font-black text-gray-600 uppercase tracking-widest">Per</span>
                <span class="text-sm font-bold text-gray-900"><%= product.unit %></span>
              </div>
            </div>
          </div>
          <div class="px-8 pb-8 pt-2">
            <%= link_to product_path(product), class: "flex items-center justify-center gap-2 w-full bg-gray-900 text-white py-4 rounded-2xl text-xs font-black uppercase tracking-widest hover:bg-blue-600 transition shadow-lg shadow-gray-200 group-hover:shadow-blue-100" do %>
              View Details
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @products.empty? %>
        <div class="col-span-full py-32 text-center bg-white rounded-[3rem] border-4 border-dashed border-gray-50 shadow-inner">
           <div class="bg-gray-100 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-10 text-gray-500">
             <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
           </div>
           <h3 class="text-3xl font-black text-gray-900 tracking-tight mb-2">No hardware found.</h3>
           <p class="text-gray-600 font-medium italic mb-12">We couldn't find any products matching your current filter.</p>
           <%= link_to "Reset All Filters", products_path, class: "bg-blue-600 text-white px-10 py-4 rounded-2xl font-black uppercase tracking-widest hover:bg-blue-700 transition shadow-xl shadow-blue-100" %>
        </div>
      <% end %>
    </div>
  </section>
</div>
