<div class="max-w-6xl mx-auto py-12 px-6 bg-white rounded-[3rem] shadow-2xl shadow-gray-100 border border-gray-100 overflow-hidden flex flex-col relative">
  <div class="absolute -top-32 -left-32 w-64 h-64 bg-indigo-50 rounded-full opacity-50 blur-3xl"></div>
  <div class="absolute -bottom-32 -right-32 w-96 h-96 bg-blue-50 rounded-full opacity-50 blur-3xl"></div>

  <div class="mb-16 border-b border-gray-100 pb-12 relative z-10 flex items-center justify-between">
    <div>
      <h1 class="text-5xl font-black text-gray-900 leading-none tracking-tight mb-4 tracking-tighter uppercase">Distribution Details <span class="text-gray-300 font-mono text-3xl italic">#<%= @order.id %></span></h1>
      <p class="text-lg font-medium text-gray-400 italic">Placed on <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
    <div class="bg-gray-50 px-8 py-6 rounded-3xl border border-gray-100 flex flex-col items-center shadow-inner group transition duration-500 hover:rotate-2">
       <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-2">Operational Status</span>
       <span class="inline-flex items-center px-6 py-2 rounded-2xl text-sm font-black uppercase tracking-widest shadow-xl border-4 border-white
         <%= @order.pending? ? 'bg-yellow-600 text-white' : '' %>
         <%= @order.approved? ? 'bg-green-600 text-white' : '' %>
         <%= @order.rejected? ? 'bg-red-600 text-white' : '' %>">
         <%= @order.status.humanize %>
       </span>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 relative z-10 mb-20">
    <div class="bg-gray-50/50 p-10 rounded-[3rem] border border-gray-100 shadow-inner flex flex-col justify-between group">
      <h3 class="text-xs font-black uppercase tracking-[0.2em] text-gray-400 mb-8 flex items-center gap-3">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
        Distribution Point
      </h3>
      <p class="text-xl font-black text-gray-900 leading-relaxed whitespace-pre-wrap group-hover:text-blue-600 transition tracking-tight italic"><%= @order.delivery_address %></p>
    </div>

    <div class="bg-gray-50/50 p-10 rounded-[3rem] border border-gray-100 shadow-inner flex flex-col justify-between group">
      <h3 class="text-xs font-black uppercase tracking-[0.2em] text-gray-400 mb-8 flex items-center gap-3">
        <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
        Logistics Contact
      </h3>
      <p class="text-4xl font-black text-gray-900 tracking-tighter italic group-hover:text-indigo-600 transition"><%= @order.contact_number %></p>
    </div>

    <div class="bg-gray-50/50 p-10 rounded-[3rem] border border-gray-100 shadow-inner flex flex-col justify-between group">
      <h3 class="text-xs font-black uppercase tracking-[0.2em] text-gray-400 mb-8 flex items-center gap-3">
        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        Fulfillment Status
      </h3>
      <div class="space-y-4">
        <% if @order.pending? %>
          <div class="flex items-center gap-3 bg-yellow-100 p-4 rounded-2xl border border-yellow-200">
             <div class="w-3 h-3 bg-yellow-500 rounded-full animate-pulse shadow-sm shadow-yellow-200"></div>
             <p class="text-xs font-black text-yellow-800 uppercase tracking-widest italic">Under Review</p>
          </div>
        <% elsif @order.rejected? %>
          <div class="flex flex-col gap-3 bg-red-100 p-6 rounded-[2rem] border border-red-200">
             <p class="text-xs font-black text-red-800 uppercase tracking-widest italic leading-relaxed">Distribution Dismissed. Contact Admin.</p>
          </div>
        <% elsif @order.approved? %>
          <div class="flex flex-col gap-4 bg-green-100 p-6 rounded-[2.5rem] border border-green-200 shadow-lg shadow-green-100/50 transform hover:-rotate-1 transition duration-500">
             <div class="flex items-center gap-3">
               <div class="w-3 h-3 bg-green-500 rounded-full shadow-sm shadow-green-200"></div>
               <p class="text-xs font-black text-green-800 uppercase tracking-widest italic leading-relaxed">Authorized Distribution</p>
             </div>
             <div class="bg-white/50 p-4 rounded-2xl border border-white shadow-inner">
               <p class="text-[8px] font-black text-green-600 uppercase tracking-widest mb-1">Expected Delivery</p>
               <p class="text-2xl font-black text-green-900 tracking-tighter italic"><%= @order.expected_delivery_date.strftime("%B %d, %Y") %></p>
             </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="relative z-10 mb-20">
    <h2 class="text-3xl font-black text-gray-900 tracking-tight mb-10 border-b border-gray-50 pb-6 uppercase tracking-tighter italic">Distribution Inventory</h2>
    <div class="bg-white rounded-[3rem] border border-gray-100 shadow-2xl shadow-gray-100 overflow-hidden">
      <table class="min-w-full divide-y divide-gray-100">
        <thead class="bg-gray-50 uppercase text-[10px] font-black tracking-widest text-gray-400">
          <tr>
            <th scope="col" class="px-10 py-6 text-left">SKU / Hardware Item</th>
            <th scope="col" class="px-10 py-6 text-center">Wholesale Price</th>
            <th scope="col" class="px-10 py-6 text-center">Distribution Qty</th>
            <th scope="col" class="px-10 py-6 text-right">Value Subtotal</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-50 bg-white">
          <% @order.order_items.each do |item| %>
            <tr class="hover:bg-blue-50/20 transition duration-150 group">
              <td class="px-10 py-8">
                <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1"><%= item.product.sku %></p>
                <p class="text-xl font-black text-gray-900 tracking-tight group-hover:text-blue-600 transition"><%= item.product.name %></p>
              </td>
              <td class="px-10 py-8 text-center text-gray-500 font-bold italic tracking-tighter text-lg">$<%= number_with_precision(item.price, precision: 2) %></td>
              <td class="px-10 py-8 text-center">
                <span class="inline-flex items-center px-4 py-2 bg-gray-50 rounded-xl text-lg font-black text-gray-900 tracking-tighter shadow-inner border border-gray-100">
                  <%= item.quantity %> <%= item.product.unit %>
                </span>
              </td>
              <td class="px-10 py-8 text-right text-2xl font-black text-gray-900 italic tracking-tighter">$<%= number_with_precision(item.subtotal, precision: 2) %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-900 text-white">
          <tr>
            <td colspan="3" class="px-10 py-10 text-right font-black uppercase tracking-widest text-xs">Total Distribution Net Value</td>
            <td class="px-10 py-10 text-right text-4xl font-black italic tracking-tighter">$<%= number_with_precision(@order.total_amount, precision: 2) %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <% if @order.notes.present? %>
    <div class="relative z-10 p-12 bg-blue-50/50 rounded-[3.5rem] border border-blue-100 shadow-inner group">
      <h3 class="text-xs font-black uppercase tracking-[0.2em] text-blue-400 mb-6 flex items-center gap-3">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path></svg>
        Operational Dispatch Notes
      </h3>
      <p class="text-xl font-black text-blue-900 italic leading-relaxed whitespace-pre-wrap group-hover:scale-[1.01] transition transform duration-500 tracking-tight">"<%= @order.notes %>"</p>
    </div>
  <% end %>

  <div class="mt-20 flex justify-center relative z-10">
    <%= link_to orders_path, class: "text-gray-300 hover:text-blue-600 font-black text-xs uppercase tracking-[0.2em] transition duration-500 flex items-center gap-4 group" do %>
       <svg class="w-4 h-4 group-hover:-translate-x-2 transition transform duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
       Return to Distribution Index
    <% end %>
  </div>
</div>
