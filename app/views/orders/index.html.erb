<div class="max-w-6xl mx-auto py-12 px-6 bg-white rounded-[3rem] shadow-2xl shadow-gray-100 border border-gray-100 overflow-hidden flex flex-col relative">
  <div class="absolute -top-32 -left-32 w-64 h-64 bg-indigo-50 rounded-full opacity-50 blur-3xl"></div>
  <div class="absolute -bottom-32 -right-32 w-96 h-96 bg-blue-50 rounded-full opacity-50 blur-3xl"></div>

  <div class="mb-16 border-b border-gray-100 pb-12 relative z-10 flex items-center justify-between">
    <div>
      <h1 class="text-5xl font-black text-gray-900 leading-none tracking-tight mb-4 tracking-tighter uppercase">Distribution History</h1>
      <p class="text-lg font-medium text-gray-400 italic">Track and review your previous wholesale distributions.</p>
    </div>
    <div class="bg-gray-50 px-6 py-4 rounded-2xl border border-gray-100 flex flex-col items-center shadow-inner">
       <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1">Total Orders</span>
       <span class="text-2xl font-black text-gray-900 tracking-tighter"><%= @orders.count %></span>
    </div>
  </div>

  <% if @orders.any? %>
    <div class="overflow-hidden bg-white rounded-[2rem] border border-gray-100 shadow-xl shadow-gray-100 relative z-10">
      <table class="min-w-full divide-y divide-gray-100">
        <thead class="bg-gray-50 uppercase text-[10px] font-black tracking-widest text-gray-400">
          <tr>
            <th scope="col" class="px-10 py-6 text-left">Distribution ID</th>
            <th scope="col" class="px-10 py-6 text-left">Fulfillment Date</th>
            <th scope="col" class="px-10 py-6 text-center">Wholesale Value</th>
            <th scope="col" class="px-10 py-6 text-center">Status</th>
            <th scope="col" class="px-10 py-6 text-right">Review</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-50 bg-white">
          <% @orders.each do |order| %>
            <tr class="hover:bg-blue-50/30 transition duration-150 group">
              <td class="px-10 py-8 font-mono text-gray-900 font-black tracking-tighter text-lg">#<%= order.id %></td>
              <td class="px-10 py-8 text-gray-500 font-bold italic tracking-tight uppercase text-xs"><%= order.created_at.strftime("%B %d, %Y") %></td>
              <td class="px-10 py-8 text-center text-2xl font-black text-gray-900 italic tracking-tighter">$<%= number_with_precision(order.total_amount, precision: 2) %></td>
              <td class="px-10 py-8 text-center">
                <span class="inline-flex items-center px-6 py-2 rounded-xl text-[10px] font-black uppercase tracking-widest shadow-inner border transition duration-300 transform group-hover:scale-110
                  <%= order.pending? ? 'bg-yellow-50 text-yellow-800 border-yellow-100' : '' %>
                  <%= order.approved? ? 'bg-green-50 text-green-800 border-green-100' : '' %>
                  <%= order.rejected? ? 'bg-red-50 text-red-800 border-red-100' : '' %>">
                  <span class="w-1.5 h-1.5 rounded-full mr-2 
                    <%= order.pending? ? 'bg-yellow-400 animate-pulse' : '' %>
                    <%= order.approved? ? 'bg-green-400' : '' %>
                    <%= order.rejected? ? 'bg-red-400' : '' %>"></span>
                  <%= order.status.humanize %>
                </span>
              </td>
              <td class="px-10 py-8 text-right">
                <%= link_to order_path(order), class: "inline-flex items-center justify-center bg-gray-900 text-white px-6 py-3 rounded-xl text-[10px] font-black uppercase tracking-widest hover:bg-blue-600 transition shadow-lg shadow-gray-200" do %>
                   Details
                   <svg class="w-3 h-3 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"></path></svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-32 relative z-10 bg-gray-50 rounded-[3rem] border-4 border-dashed border-gray-100">
      <div class="bg-white w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-10 text-gray-200 shadow-inner">
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
      </div>
      <h3 class="text-3xl font-black text-gray-900 tracking-tight mb-4 uppercase tracking-tighter">No distribution records.</h3>
      <p class="text-lg font-medium text-gray-400 italic mb-12">You haven't placed any wholesale hardware orders yet.</p>
      <%= link_to "Browse Inventory", products_path, class: "bg-blue-600 text-white px-12 py-5 rounded-2xl font-black uppercase tracking-widest hover:bg-blue-700 transition shadow-2xl shadow-blue-100" %>
    </div>
  <% end %>
</div>
