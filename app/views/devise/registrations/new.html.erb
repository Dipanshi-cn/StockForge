<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 tracking-tight tracking-widest">Join StockForge</h2>
    <p class="mt-2 text-center text-sm text-gray-500 font-medium italic">Create a new customer or dealer account.</p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-10 px-6 shadow-2xl rounded-2xl border border-gray-100 sm:px-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-8" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-xs font-black text-gray-400 uppercase tracking-widest mb-3" %>
          <div class="mt-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full px-5 py-4 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-lg font-bold" %>
          </div>
        </div>

        <div>
          <%= f.label :role, "Account Type", class: "block text-xs font-black text-gray-400 uppercase tracking-widest mb-3" %>
          <div class="mt-1">
            <%= f.select :role, [["Customer", "customer"], ["Dealer", "dealer"]], {}, class: "appearance-none block w-full px-5 py-4 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-lg font-bold" %>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-8">
          <div>
            <%= f.label :password, class: "block text-xs font-black text-gray-400 uppercase tracking-widest mb-3" %>
            <div class="mt-1">
              <%= f.password_field :password, autocomplete: "new-password", class: "appearance-none block w-full px-5 py-4 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-base font-bold" %>
            </div>
            <% if @minimum_password_length %>
              <p class="mt-2 text-[10px] text-gray-400 font-bold uppercase tracking-widest italic"><%= @minimum_password_length %> chars min.</p>
            <% end %>
          </div>

          <div>
            <%= f.label :password_confirmation, "Verify", class: "block text-xs font-black text-gray-400 uppercase tracking-widest mb-3" %>
            <div class="mt-1">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none block w-full px-5 py-4 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-base font-bold" %>
            </div>
          </div>
        </div>

        <div>
          <%= f.submit "Register Account", class: "w-full flex justify-center py-5 px-6 border border-transparent rounded-xl shadow-lg text-sm font-black uppercase tracking-widest text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition cursor-pointer transform hover:-translate-y-1 active:scale-95 shadow-indigo-100" %>
        </div>
      <% end %>

      <div class="mt-10 pt-10 border-t border-gray-50 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
