<div class="mb-12 border-b border-gray-100 pb-8 flex items-center justify-between">
  <div>
    <h1 class="text-4xl font-extrabold text-gray-900 mb-2 tracking-tight"><%= @category.name %></h1>
    <p class="text-gray-500 font-medium italic"><%= @category.description %></p>
  </div>
  <div>
    <%= link_to "View All Categories", categories_path, class: "text-gray-600 hover:text-indigo-700 font-extrabold uppercase text-xs tracking-widest transition flex items-center gap-2" %>
  </div>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
  <% @products.each do |product| %>
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden group hover:shadow-xl transition duration-300 transform hover:-translate-y-2">
      <div class="h-48 bg-gray-100 flex items-center justify-center text-gray-500 group-hover:bg-indigo-50 group-hover:text-indigo-700 transition duration-300">
        <i data-lucide="<%= category_icon_name(product.category.name) %>" class="w-16 h-16"></i>
      </div>
      <div class="p-8 flex flex-col h-full">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-2xl font-black text-gray-900 tracking-tight group-hover:text-indigo-600 transition"><%= product.name %></h3>
          <span class="text-xs font-black text-indigo-600 bg-indigo-50 px-3 py-1 rounded-full"><%= product.brand %></span>
        </div>
        <p class="text-gray-700 text-sm font-medium leading-relaxed italic mb-8 line-clamp-2"><%= product.description %></p>
        
        <div class="flex items-center justify-between mt-auto mb-8 border-t border-gray-50 pt-6">
          <span class="text-2xl font-black text-gray-900 italic tracking-tighter">$<%= number_with_precision(product.selling_price, precision: 2) %></span>
          <span class="text-[10px] font-black uppercase tracking-widest px-2 py-1 rounded border shadow-sm
            <%= product.stock_quantity > 0 ? 'bg-green-100 text-green-800 border-green-200' : 'bg-red-100 text-red-800 border-red-200' %>">
            <%= product.stock_quantity > 0 ? "In Stock: #{product.stock_quantity}" : "Out of Stock" %>
          </span>
        </div>
        
        <%= link_to "Review Details", product_path(product), class: "block w-full bg-gray-900 text-white text-center py-4 rounded-xl font-black uppercase text-xs tracking-widest hover:bg-indigo-600 transition shadow-lg shadow-gray-200" %>
      </div>
    </div>
  <% end %>
</div>

<% if @products.empty? %>
  <div class="text-center py-24 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-200 mt-8">
    <div class="bg-white w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-8 text-gray-500 shadow-sm">
       <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
    </div>
    <h3 class="text-2xl font-bold text-gray-900 mb-2">No products in this category</h3>
    <p class="text-gray-700 mb-10 max-w-sm mx-auto font-medium">We're working on restocking items for this category. Please check back soon.</p>
    <%= link_to "Browse All Products", products_path, class: "bg-blue-600 text-white px-8 py-3 rounded-xl font-bold hover:bg-blue-700 transition shadow-lg" %>
  </div>
<% end %>
