<% content_for :header, "Distribution Review Center" %>

<div class="mb-12 flex items-center justify-between">
  <div>
    <h2 class="text-2xl font-black text-gray-900 tracking-tight leading-none mb-2 uppercase tracking-tighter italic">Operational Queue</h2>
    <p class="text-sm font-medium text-gray-400 italic">Review and authorize pending wholesale distributions.</p>
  </div>
  <div class="flex items-center gap-4">
    <div class="bg-yellow-100 px-6 py-4 rounded-3xl border border-yellow-200 flex items-center gap-4 shadow-xl shadow-yellow-100/50 group transition duration-500 hover:rotate-2">
      <div class="w-4 h-4 bg-yellow-500 rounded-full animate-pulse shadow-sm shadow-yellow-200"></div>
      <div>
        <span class="block text-[10px] font-black text-yellow-600 uppercase tracking-widest leading-none mb-1">Queue Size</span>
        <span class="text-xl font-black text-yellow-900 tracking-tighter leading-none"><%= @orders.where(status: :pending).count %> Active</span>
      </div>
    </div>
  </div>
</div>

<div class="bg-white rounded-[3rem] shadow-2xl shadow-gray-100 border border-gray-100 overflow-hidden relative group">
  <div class="absolute inset-0 bg-gradient-to-tr from-gray-50 to-transparent opacity-50 group-hover:scale-105 transition duration-1000"></div>
  <table class="min-w-full divide-y divide-gray-100 relative z-10">
    <thead class="bg-gray-50 uppercase text-[10px] font-black tracking-widest text-gray-400">
      <tr>
        <th class="px-10 py-6 text-left">Distribution / Client</th>
        <th class="px-10 py-6 text-center">Dispatch Date</th>
        <th class="px-10 py-6 text-center">Distribution Value</th>
        <th scope="col" class="px-10 py-6 text-center">Status</th>
        <th class="px-10 py-6 text-right">Review Authorization</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-50 bg-white">
      <% @orders.each do |order| %>
        <tr class="hover:bg-blue-50/20 transition duration-150 group">
          <td class="px-10 py-8">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-2xl bg-gray-50 flex items-center justify-center text-gray-400 group-hover:bg-blue-600 group-hover:text-white transition duration-500 transform group-hover:rotate-6 shadow-inner border border-gray-100">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
              </div>
              <div>
                <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1 italic tracking-tighter">Order #<%= order.id %></p>
                <p class="text-lg font-black text-gray-900 tracking-tight group-hover:text-blue-600 transition"><%= order.user.email %></p>
              </div>
            </div>
          </td>
          <td class="px-10 py-8 text-center text-gray-500 font-bold italic tracking-tighter uppercase text-xs"><%= order.created_at.strftime("%b %d, %Y") %></td>
          <td class="px-10 py-8 text-center">
            <span class="text-2xl font-black text-gray-900 italic tracking-tighter shadow-sm">$<%= number_with_precision(order.total_amount, precision: 2) %></span>
          </td>
          <td class="px-10 py-8 text-center">
            <span class="inline-flex items-center px-6 py-2 rounded-2xl text-[10px] font-black uppercase tracking-widest shadow-xl border-4 border-white transition duration-300 transform group-hover:scale-110
              <%= order.pending? ? 'bg-yellow-600 text-white' : '' %>
              <%= order.approved? ? 'bg-green-600 text-white' : '' %>
              <%= order.rejected? ? 'bg-red-600 text-white' : '' %>">
              <%= order.status.humanize %>
            </span>
          </td>
          <td class="px-10 py-8 text-right">
            <%= link_to admin_order_path(order), class: "inline-flex items-center justify-center bg-gray-900 text-white px-8 py-4 rounded-2xl text-[10px] font-black uppercase tracking-widest hover:bg-blue-600 transition shadow-2xl shadow-gray-200 group-hover:shadow-blue-100 transform hover:-translate-y-1 active:scale-95 duration-300" do %>
               Review Dispatch
               <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"></path></svg>
            <% end %>
          </td>
        </tr>
      <% end %>

      <% if @orders.empty? %>
        <tr>
          <td colspan="5" class="px-10 py-40 text-center">
            <div class="bg-gray-50 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-10 text-gray-200 shadow-inner">
               <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
            </div>
            <h3 class="text-3xl font-black text-gray-900 tracking-tight mb-4 uppercase tracking-tighter">Queue is Empty.</h3>
            <p class="text-lg font-medium text-gray-400 italic mb-12">No wholesale distributions are currently pending review.</p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
