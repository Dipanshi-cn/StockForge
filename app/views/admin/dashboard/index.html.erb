<% content_for :header, "Operational Overview" %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
  <div class="bg-white p-8 rounded-3xl shadow-xl shadow-gray-100 border border-gray-100 flex flex-col justify-between hover:scale-[1.02] transition transform duration-300">
    <div class="flex items-center justify-between mb-8">
      <div class="bg-blue-100 p-4 rounded-2xl text-blue-600 shadow-inner">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
      </div>
      <div class="text-right">
        <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Global Stock</p>
        <p class="text-4xl font-black text-gray-900 tracking-tight mt-1"><%= number_with_delimiter(@total_stock) %></p>
      </div>
    </div>
    <p class="text-xs font-bold text-gray-500 flex items-center gap-1">
      <span class="text-blue-600">↑ <%= @total_products %></span> Active Products
    </p>
  </div>

  <div class="bg-white p-8 rounded-3xl shadow-xl shadow-gray-100 border border-gray-100 flex flex-col justify-between hover:scale-[1.02] transition transform duration-300">
    <div class="flex items-center justify-between mb-8">
      <div class="bg-yellow-100 p-4 rounded-2xl text-yellow-600 shadow-inner">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      </div>
      <div class="text-right">
        <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Pending Review</p>
        <p class="text-4xl font-black text-yellow-600 tracking-tight mt-1"><%= @pending_orders_count %></p>
      </div>
    </div>
    <p class="text-xs font-bold text-gray-500 flex items-center gap-1">
      <span class="text-yellow-600 animate-pulse">●</span> Attention Required
    </p>
  </div>

  <div class="bg-white p-8 rounded-3xl shadow-xl shadow-gray-100 border border-gray-100 flex flex-col justify-between hover:scale-[1.02] transition transform duration-300">
    <div class="flex items-center justify-between mb-8">
      <div class="bg-green-100 p-4 rounded-2xl text-green-600 shadow-inner">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
      </div>
      <div class="text-right">
        <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Fulfillment</p>
        <p class="text-4xl font-black text-green-600 tracking-tight mt-1"><%= @approved_orders_count %></p>
      </div>
    </div>
    <p class="text-xs font-bold text-gray-500">Orders ready for shipping</p>
  </div>

  <div class="bg-white p-8 rounded-3xl shadow-xl shadow-gray-100 border border-gray-100 flex flex-col justify-between hover:scale-[1.02] transition transform duration-300">
    <div class="flex items-center justify-between mb-8">
      <div class="bg-red-100 p-4 rounded-2xl text-red-600 shadow-inner">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
      </div>
      <div class="text-right">
        <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Inventory Alerts</p>
        <p class="text-4xl font-black text-red-600 tracking-tight mt-1"><%= @low_stock_products.count %></p>
      </div>
    </div>
    <p class="text-xs font-bold text-red-500 uppercase tracking-tighter">Products need restock</p>
  </div>
</div>

<div class="flex flex-col lg:flex-row gap-12">
  <div class="w-full lg:w-2/3">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-black text-gray-900 tracking-tight">Critical Restock Required</h2>
      <%= link_to "View Full Inventory", admin_products_path, class: "text-xs font-black text-blue-600 uppercase tracking-widest hover:text-blue-700 transition" %>
    </div>
    <div class="bg-white rounded-3xl shadow-2xl shadow-gray-100 border border-gray-100 overflow-hidden">
      <table class="min-w-full divide-y divide-gray-100">
        <thead class="bg-gray-50 uppercase text-[10px] font-black tracking-widest text-gray-400">
          <tr>
            <th class="px-8 py-5 text-left">SKU / Product</th>
            <th class="px-8 py-5 text-center">Current Status</th>
            <th class="px-8 py-5 text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @low_stock_products.each do |product| %>
            <tr class="hover:bg-red-50/30 transition duration-150">
              <td class="px-8 py-6">
                <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1"><%= product.sku %></p>
                <p class="text-lg font-black text-gray-900 tracking-tight"><%= product.name %></p>
              </td>
              <td class="px-8 py-6 text-center">
                <div class="inline-flex items-center px-4 py-2 bg-red-100 rounded-xl border border-red-200 shadow-sm">
                  <span class="text-red-800 text-sm font-black italic tracking-tighter"><%= product.stock_quantity %> / <%= product.min_stock_alert %> <%= product.unit %></span>
                </div>
              </td>
              <td class="px-8 py-6 text-right">
                <%= link_to "Update Stock", edit_admin_product_path(product), class: "inline-flex items-center justify-center bg-gray-900 text-white px-5 py-2.5 rounded-xl text-[10px] font-black uppercase tracking-widest hover:bg-gray-800 transition shadow-lg" %>
              </td>
            </tr>
          <% end %>
          <% if @low_stock_products.empty? %>
            <tr>
              <td colspan="3" class="px-8 py-20 text-center">
                <div class="bg-green-50 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6 text-green-500">
                  <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path></svg>
                </div>
                <p class="text-lg font-black text-gray-900 tracking-tight">All systems green.</p>
                <p class="text-sm font-medium text-gray-500 italic mt-1">No products currently below alert levels.</p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="w-full lg:w-1/3 space-y-12">
    <div>
      <h2 class="text-2xl font-black text-gray-900 tracking-tight mb-8">System Actions</h2>
      <div class="grid grid-cols-1 gap-4">
        <%= link_to admin_products_path, class: "group relative overflow-hidden bg-indigo-600 p-8 rounded-3xl shadow-xl shadow-indigo-100 hover:bg-indigo-700 transition duration-300" do %>
          <div class="relative z-10">
            <h3 class="text-xl font-black text-white tracking-tight mb-2">Inventory Management</h3>
            <p class="text-xs font-medium text-indigo-100 italic leading-relaxed">Adjust pricing, update descriptions, and track quantities.</p>
          </div>
          <svg class="absolute -right-8 -bottom-8 w-32 h-32 text-indigo-500/50 group-hover:scale-110 transition transform duration-300" fill="currentColor" viewBox="0 0 24 24"><path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
        <% end %>

        <%= link_to admin_orders_path, class: "group relative overflow-hidden bg-white p-8 rounded-3xl shadow-xl shadow-gray-100 border border-gray-100 hover:border-blue-500 transition duration-300" do %>
          <div class="relative z-10">
            <h3 class="text-xl font-black text-gray-900 tracking-tight mb-2">Order Review Center</h3>
            <p class="text-xs font-medium text-gray-500 italic leading-relaxed">Review pending requests and authorize wholesale distributions.</p>
          </div>
          <svg class="absolute -right-8 -bottom-8 w-32 h-32 text-gray-50 group-hover:scale-110 transition transform duration-300" fill="currentColor" viewBox="0 0 24 24"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <% end %>

        <%= link_to admin_categories_path, class: "group relative overflow-hidden bg-white p-8 rounded-3xl shadow-xl shadow-gray-100 border border-gray-100 hover:border-indigo-500 transition duration-300" do %>
          <div class="relative z-10">
            <h3 class="text-xl font-black text-gray-900 tracking-tight mb-2">Category Architecture</h3>
            <p class="text-xs font-medium text-gray-500 italic leading-relaxed">Organize your wholesale catalog for efficient browsing.</p>
          </div>
          <svg class="absolute -right-8 -bottom-8 w-32 h-32 text-gray-50 group-hover:scale-110 transition transform duration-300" fill="currentColor" viewBox="0 0 24 24"><path d="M7 7h10M7 11h10M7 15h10M5 3h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2z"></path></svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
